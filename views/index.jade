extends layout

block content
  div(class='section no-pad-bot')
    - if (is_history==1)
        div(class='ribbon-wrapper-green')
          div(class="ribbon-green") #{date}
    div.container
      div(class="row")
        div(class='col s12 m12 l4')
          div(class='cover-div z-depth-4')
            img(class='cover-img',src="#{cover}")
        div(class='col s12 m12 l8')
          div(class='cover-detail')
            p(class='music-title') #{music}
            p(class='music-subtitle grey-text') #{artist} / #{album}
            div(class='card music-card')
                div(class='card-content')
                    span #{intro}
            div(class='music-player')
                paper-audio-player(src="#{murl}" title="#{music} - #{artist}",color="#F05C38",preload='none')
      div.divider
      div(class="row")
        div(class='col s12 m12 l12')
            h4 歌词
            div.music-lrc
                #{lyric}
