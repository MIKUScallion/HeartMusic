extends layout
block content
    section.container
        .container
            .row
                div(class='col s12')
                    h2.center-align 登录
                div(class='col s12',id="login")
                    .row
                        form(method='post',action='/dologin')
                            div(class='input-field col s6')
                                i(class='material-icons prefix') perm_identity
                                input(id='icon_prefix3',type='text',class='validate',name='username')
                                label(for='icon_prefix3') 用户名
                            div(class='input-field col s6')
                                i(class='material-icons prefix') label_outline
                                input(id='icon_prefix2',type='password',class='validate',name='password')
                                label(for='icon_prefix2') 密码
                            div(class='input-field col s12 center-align')
                                input(type='checkbox',class='filled-in',id='filled-in-box',checked='')
                                label(for='filled-in-box') 记住用户名和密码
                            div(class='input-field col s12 center-align')
                                button(class='btn waves-effect waves-light',type='submit') 登录
                                    i(class='material-icons left') vpn_key

                                button(class='btn waves-effect waves-light',type='reset') 重填
                                    i(class='material-icons left') replay

